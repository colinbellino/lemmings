    "version": "2.0.0",
    "tasks": [
        {
            "label": "build windows:debug",
            "type": "shell",
            "command": "date_time=$(date +%Y-%m-%d_%H-%M); echo $date_time; mkdir ./Builds/Windows/$date_time; godot --no-window --export-debug \"Windows Desktop\" ./Builds/Windows/$date_time/Tactics.exe && ./Builds/Windows/$date_time/Tactics.exe",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
