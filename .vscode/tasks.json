{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: windows (debug)",
            "type": "shell",
            "command": "date_time=$(date +%Y-%m-%d_%H-%M); echo $date_time; mkdir ./Builds/Windows/$date_time; godot --no-window --export-debug \"Windows Desktop\" ./Builds/Windows/$date_time/Lemmings.exe && ./Builds/Windows/$date_time/Lemmings.exe",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build: windows (release)",
            "type": "shell",
            "command": "date_time=$(date +%Y-%m-%d_%H-%M); echo $date_time; mkdir ./Builds/Windows/$date_time; godot --no-window --export \"Windows Desktop\" ./Builds/Windows/$date_time/Lemmings.exe && ./Builds/Windows/$date_time/Lemmings.exe",
            "problemMatcher": []
        },
        {
            "label": "Build + Deploy: windows (release)",
            "type": "shell",
            "command": "date_time=$(date +%Y-%m-%d_%H-%M); echo $date_time; mkdir ./Builds/Windows/$date_time; godot --no-window --export \"Windows Desktop\" ./Builds/Windows/$date_time/Lemmings.exe && ./Builds/Windows/$date_time/Lemmings.exe && butler push ./Builds/Windows/$date_time/ colinbellino/lemmings:windows",
            "problemMatcher": []
        }
    ]
}
