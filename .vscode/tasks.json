        {
            "label": "build windows:release",
            "type": "shell",
            "command": "date_time=$(date +%Y-%m-%d_%H-%M); echo $date_time; mkdir ./Builds/Windows/$date_time; godot --no-window --export \"Windows Desktop\" ./Builds/Windows/$date_time/Tactics.exe && ./Builds/Windows/$date_time/Tactics.exe",
        }
    ]
